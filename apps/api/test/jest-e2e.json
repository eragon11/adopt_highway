{
    "moduleDirectories": [
        "node_modules",
        "src"
    ],
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "moduleNameMapper": {
        "src/(.*)": "<rootDir>/src/$1"
    },
    "rootDir": "./../",
    "roots": [
        "src",
        "test"
    ],
    "setupFiles": [
        "<rootDir>/test/setEnvVars.ts"
    ],
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    }
}